<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrador</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/litera/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar bg-dark">
        <!-- <a href="/" class="vanbar-brand">CRUD Nodejs MYSQL</a> -->
        <div>
            <h2><strong>ADMINISTRADOR BAB</strong></h2>
        </div>
        <div class="col-md-5">
            <div class="card-body">
                <form action="">
                    <div>
                        <button type="submit" class="btn btn-light"><strong>DESCARGAR REPORTE</strong></button>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        <br>
        <br>
        <br>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-dark">
                            <th>nÂ°</th>
                            <th>ID</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Precio</th>
                            <th>Disponibles</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% for (var i=0; i < data.length; i++) {%>
                                <tr>
                                    <td>
                                        <%= (i + 1) %>
                                    </td>
                                    <td>
                                        <%= data[i].idTravelRoute %>
                                    </td>
                                    <td>
                                        <%= data[i].startingPlace %>
                                    </td>
                                    <td>
                                        <%= data[i].destinyPlace %>
                                    </td>
                                    <td>
                                        <%= data[i].dateTravel %>
                                    </td>
                                    <td>
                                        <%= data[i].hourTravel %>
                                    </td>
                                    <td>
                                        <%= data[i].priceTravel %>
                                    </td>
                                    <td>
                                        <%= data[i].availablePlaces %>
                                    </td>
                                    <td>
                                        <!-- eliminamos los archivos pasando l id de la base  -->
                                        <a href="" class="btn btn-danger">ELIMINAR</a>
                                        <!-- <a href="" class="btn btn-info">ACTUALIZAR</a> -->
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <strong class="card-title">AGREGAR NUEVA RUTA</strong>
                        </div>
                        <form action="" method="post">
                            <div class="form-group">
                                <input type="text" name="fullname" placeholder="Inicio" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="username" placeholder="Destino" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="date" name="password" placeholder="Fecha" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="time" name="email" placeholder="Hora" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="email" placeholder="Precio" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="email" placeholder="Disponibles" class="form-control">
                            </div>
                            <br>
                            <div class="form-group">
                                <button type="submit" class="btn btn-outline-success">Agregar Ruta</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>