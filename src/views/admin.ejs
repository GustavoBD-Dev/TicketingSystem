<script>
    $(document).ready(function() {
        $('#routes').DataTable({
            ajax:{
                url:'/data',
                dataSrc: ''
            },
            columns: [
                {data: 'idTravelRoute'},
                {data: 'startingPlace'},
                {data: 'destinyPlace'},
                {data: 'dateTravel'},
                {data: 'hourTravel'},
                {data: 'priceTravel'},
                {data: 'availablePlaces'},
                {data: null,
                    "render": function (data) {
                        return '<a onclick="confirmar('+data.idTravelRoute+')" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>'
                    }
                },
            ],// option to show rows 
            pageLength: 5,
            lengthMenu: [[5,10,20,-1], [5,10,20,'TODOS']]
        });
    } );

    function confirmar(idTravelRoute) {
            Swal.fire({
                title: 'Estas seguro de eliminar este registro',
                text: "Esta accion no se puede revertir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si, eliminar!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location = "/deleteRoute/" + idTravelRoute;
                    Swal.fire(
                        'Eliminado!',
                        `El registro ${idTravelRoute} ha sido eliminado.`,
                        'success'
                    )
                }
            })
        }
